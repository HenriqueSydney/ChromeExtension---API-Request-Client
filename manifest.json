{
    "manifest_version": 3,
    "name": "API Request Client",
    "version": "1.0",
    "description": "A mini REST client for quick API requests.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    }
  }